<Window x:Class="RectangleWindows.ShortcutRecorderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Record Shortcut" Height="150" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Press your desired key combination:" Margin="0,0,0,10"/>
            <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Background="LightGray">
                <TextBlock x:Name="ShortcutTextBlock" Text="Waiting for keys..." 
                           FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
            </Border>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="OK" Width="75" Height="25" Margin="0,0,10,0" Click="OKButton_Click" IsDefault="True"/>
                <Button Content="Cancel" Width="75" Height="25" Click="CancelButton_Click" IsCancel="True"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

